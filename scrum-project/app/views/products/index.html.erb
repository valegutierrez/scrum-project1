<p id="notice"><%= notice %></p>

<h1>Productos disponibles:</h1>

<div class="row">
  <div class="col-md-4 mt-4">
    <% @products.each do |product| %>
      <div class="card">
        <div class="card-body">
          <div class="d-flex">
            <h4 class="card-title"><%= product.title %></h4><small><%= time_ago_in_words(product.created_at) %> ago</small>
          </div>
          <p class="card-text"><%= product.content %></p>
          <small><%= product.price %>CLP </small>
          <%= link_to 'Comprar', buy_product_path(product), class: 'btn btn-success' %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
